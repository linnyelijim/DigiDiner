    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            padding: 20px;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333333;
        }

        p {
            margin-bottom: 10px;
        }

        .receipt-details {
            margin-bottom: 20px;
        }

        .receipt-options {
            margin-top: 20px;
        }

        .email-receipt-option,
        .text-receipt-option {
            margin-bottom: 10px;
        }

        label {
            display: inline-block;
            width: 120px;
            margin-right: 10px;
        }

        input[type="email"],
        input[type="tel"] {
            width: 200px;
            padding: 5px;
            font-size: 14px;
        }

        .btn {
            padding: 8px 16px;
            font-size: 14px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: #ffffff;
        }

        p:last-child {
            margin-bottom: 0;
        }

        .success-message {
            color: green;
            margin-top: 10px;
        }

        .error-message {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Receipt</h1>
        <p><strong>Date:</strong>
            <%= new Date(date).toLocaleDateString('en-us') %>
        </p>
        <div class="receipt-details">
            <div class="col-md-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-primary">Your Order</span>
                </h4>
                <% if (orderItems.length> 0) { %>
                    <% orderItems.forEach(function(item) { %>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                                <div>
                                    <h6 class="my-0">
                                        <%= menuItems[item.itemId].name %>
                                    </h6>
                                    <small class="text-body-secondary">
                                        <%= menuItems[item.itemId].description %>
                                    </small>
                                </div>
                                <span class="text-body-secondary">$<%= menuItems[item.itemId].price %></span>
                            </li>
                        </ul>
                        <% }) %>
                            <% } else { %>
                                <p>No items in the order.</p>
                                <% } %>
            </div>
            <p>
                Subtotal: $<%= subtotal.toFixed(2) %>
            </p>
            <p>
                Tax: $<%= tax.toFixed(2) %>
            </p>
            <p>
                Tip: $<%= tip.toFixed(2) %>
            </p>
            <p>
                Total: $<%= total.toFixed(2) %>
            </p>
            <!-- Display the payment method information -->
            <div class="col-md-8">
                <h4 class="mb-3 text-center">Payment Method</h4>
                <div class="payment">
                    <% if (paymentMethod==='cash' ) { %>
                        <p class="text-center">Payment Method: Paid in Cash</p>
                        <% } else if (paymentMethod==='credit' ) { %>
                            <p class="text-center">Payment Method: Credit/Debit Card</p>
                            <!-- Display credit card information here if needed -->
                            <% } else { %>
                                <p class="text-center">Payment Method: Not Available</p>
                                <% } %>
                </div>
            </div>
        </div>
